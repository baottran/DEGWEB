
<% @chosen_report = report %>
<% case report %>
<% when 'New Inquiries' %>

      <a href="/reporting" class="<%= btn_class_for_reporting %>">
        <div class="title">New</div>
        <div class="title">Inquiries</div>
      </a>

<% when 'Resolved Inquiries' %>

      <a href="/reporting?type=Resolved+Inquiries" class="<%= btn_class_for_reporting %>">
        <div class="title">Resolved</div>
        <div class="title">Inquiries</div>
      </a>

<% when 'Aging Inquiries' %>

      <a href="/reporting?direction=asc&sort=created_at&type=Aging+Inquiries" class="<%= btn_class_for_reporting %>">
        <div class="title">Aging</div>
        <div class="title">Inquiries</div>
      </a>

<% when 'Comments' %>
      
      <a href="/reporting?type=Comments" class="<%= btn_class_for_reporting %>">
      <div class="title">Recent</div>
        <div class="title">Comments</div>
      </a>

<% when 'Export as Report' %>

      <a href="/reporting?type=Export+as+Report" class="<%= btn_class_for_reporting %>">
        <div class="title">Export as</div>
        <div class="title">Report</div>
      </a>
<% else %>

<% end %>