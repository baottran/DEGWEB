<%= form_for @inquiry, url: {action: "resolve"}, html: {class: "resolution-edit-form"} do |f| %>
	<%= f.text_area :resolution, class: "form-control inquiry-resolution", rows: "3" %>
	<br>
	<%= f.submit "Save", class: "btn btn-primary btn-submit", html: { type: "submit", id: "resolution-submit"} %>
	<a href="/inquiries/<%= @inquiry.id %>" class="btn btn-default">Cancel</a>
<% end %>