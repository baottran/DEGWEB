<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<div class="container-non-responsive form-section">
  <%= render partial: 'nav_pills', locals: {current: "new"} %>
  <br>
  <div id="hidden-top" tabindex="-1" style="opacity: 0; font-size: 2px;">hi</div>
  <% if flash[:status] %>
    <div class="alert alert-dismissible alert-info">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <p><%= flash[:status].gsub("\n", "<br>").html_safe %></p>
    </div>
    <br><br>
  <% end %>
  <% if (!@status.can_create_inquiries && @status.activated) == false %>
    <h3 id ="title">Submit a Database Inquiry</h3>
    <%= render 'form_new' %>
  <% end %>
</div>

<style>
  .alert {
    width: 700px;
    font-size: 15px;
  }
</style>
